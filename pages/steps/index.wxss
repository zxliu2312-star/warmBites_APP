.page {
  min-height: 100vh;
  background:
    radial-gradient(circle at 0 0, rgba(255, 216, 164, 0.45), transparent 60%),
    radial-gradient(circle at 100% 100%, rgba(255, 186, 140, 0.4), transparent 55%),
    #f7f2ed;
  padding: 32rpx 24rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.header .title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2f2f2f;
}

.header .meta {
  margin-top: 6rpx;
  color: #8c8c8c;
  font-size: 26rpx;
}

.step-swiper {
  flex: 1;
  min-height: 0;
}

.step-item {
  height: 100%;
}

.step-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  height: 100%;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.step-media {
  width: 100%;
  height: 320rpx;
}

.step-body {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.step-index {
  font-weight: 700;
  color: #d35400;
  font-size: 30rpx;
}

.step-text {
  color: #444;
  font-size: 30rpx;
  line-height: 1.6;
}

.tips {
  margin-top: 4rpx;
  padding: 18rpx;
  background: #fff5eb;
  border-radius: 14rpx;
  color: #6a4a2f;
  font-size: 26rpx;
  transition: transform 0.15s ease;
}

.tips-label {
  font-weight: 700;
  margin-right: 8rpx;
}

.tips-text {
  display: inline;
}

.ai-entry {
  margin-top: 14rpx;
  padding: 12rpx 14rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.75);
  border: 1rpx dashed rgba(208, 122, 58, 0.5);
  color: #d07a3a;
  font-size: 26rpx;
}

.ai-entry:active {
  transform: scale(0.99);
}

.ai-tip {
  margin-top: 12rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid rgba(208, 122, 58, 0.2);
}

.ai-tip-label {
  font-weight: 700;
  color: #d35400;
}

.ai-tip-text {
  color: #6a4a2f;
}

.ai-modal {
  position: fixed;
  inset: 0;
  z-index: 1000;
}

.ai-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.35);
}

.ai-panel {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 78vh;
  background: #fffdf9;
  border-top-left-radius: 28rpx;
  border-top-right-radius: 28rpx;
  padding: 22rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.12);
}

.ai-header .ai-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2f2f2f;
}

.ai-header .ai-sub {
  margin-top: 6rpx;
  color: #8c8c8c;
  font-size: 24rpx;
}

.ai-chat {
  flex: 1;
  min-height: 240rpx;
  background: #fff;
  border-radius: 18rpx;
  padding: 14rpx;
  box-shadow: inset 0 0 0 1rpx rgba(240, 230, 220, 0.9);
}

.ai-msg {
  display: flex;
  margin: 10rpx 0;
}

.ai-msg.user {
  justify-content: flex-end;
}

.ai-msg.assistant {
  justify-content: flex-start;
}

.ai-bubble {
  max-width: 86%;
  padding: 12rpx 14rpx;
  border-radius: 16rpx;
  line-height: 1.55;
  font-size: 26rpx;
  color: #2f2f2f;
}

.ai-msg.user .ai-bubble {
  background: linear-gradient(135deg, #ffb872, #ff8f4c);
  color: #fff;
}

.ai-msg.assistant .ai-bubble {
  background: #fff5eb;
  color: #6a4a2f;
}

.ai-input-row {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.ai-input {
  flex: 1;
  background: #fff;
  border-radius: 999rpx;
  padding: 16rpx 18rpx;
  font-size: 26rpx;
  border: 1rpx solid #f0e6dc;
}

.ai-send {
  border-radius: 999rpx;
  padding: 0 22rpx;
  background: linear-gradient(135deg, #ffb872, #ff8f4c);
  color: #fff;
}

.ai-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ai-close {
  border-radius: 999rpx;
  background: transparent;
  color: #d07a3a;
  border: 2rpx solid rgba(208, 122, 58, 0.45);
}

.ai-loading {
  color: #8c8c8c;
  font-size: 24rpx;
}

.actions {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  margin: 12rpx 4rpx 4rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.ghost {
  min-width: 180rpx;
  padding: 16rpx 24rpx;
  background: transparent;
  color: #d07a3a;
  border-radius: 999rpx;
  border: 2rpx solid rgba(208, 122, 58, 0.45);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.primary {
  flex: 1;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #ffb872, #ff8f4c);
  color: #fff;
  border-radius: 999rpx;
  box-shadow: 0 14rpx 28rpx rgba(255, 143, 76, 0.35);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.empty {
  padding: 80rpx 32rpx;
  text-align: center;
  color: #8c8c8c;
}

.step-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 16rpx 34rpx rgba(0, 0, 0, 0.08);
}

.ghost:active,
.primary:active {
  transform: scale(0.97);
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.08);
}

.tips:active {
  transform: scale(0.99);
}

