.page {
  min-height: 100vh;
  background: #f7f2ed;
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.06);
}

.hero {
  background: linear-gradient(135deg, #ffe6cc, #fff5e9);
  color: #3a2a1b;
}

.user-row {
  display: flex;
  gap: 18rpx;
  align-items: center;
}

.avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: rgba(255, 255, 255, 0.6);
  flex: 0 0 auto;
}

.user-main {
  flex: 1;
  min-width: 0;
}

.name {
  font-size: 36rpx;
  font-weight: 700;
}

.meta {
  margin-top: 6rpx;
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.meta-item {
  color: #704a2a;
  font-size: 24rpx;
}

.motto {
  margin-top: 10rpx;
  color: #704a2a;
  font-size: 26rpx;
}

.stats-row {
  margin-top: 18rpx;
  padding-top: 18rpx;
  border-top: 1rpx solid rgba(112, 74, 42, 0.15);
  display: flex;
}

.stat {
  flex: 1;
  text-align: center;
}

.stat-num {
  font-size: 34rpx;
  font-weight: 800;
  color: #3a2a1b;
}

.stat-label {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #704a2a;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2f2f2f;
}

.section-content {
  margin-top: 8rpx;
  color: #6a6a6a;
  font-size: 26rpx;
  line-height: 1.6;
}

.item {
  margin-top: 18rpx;
  padding: 16rpx 4rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.item:first-of-type {
  border-top: none;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-icon {
  width: 44rpx;
  text-align: center;
  font-size: 28rpx;
  color: #c8742a;
}

.item-title {
  font-size: 28rpx;
  color: #2f2f2f;
}

.item-arrow {
  font-size: 34rpx;
  color: #b9b9b9;
}
