.page {
  min-height: 100vh;
  background: #f7f2ed;
  padding: 32rpx;
  box-sizing: border-box;
}

.header .title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2f2f2f;
}

.header .subtitle {
  margin-top: 8rpx;
  color: #8c8c8c;
  font-size: 26rpx;
}

.empty {
  margin-top: 160rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.06);
}

.icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.text {
  color: #6a6a6a;
  font-size: 28rpx;
}

.fav-list {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.fav-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 16rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.06);
}

.fav-cover {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  flex: 0 0 auto;
}

.fav-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.fav-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2f2f2f;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fav-meta {
  color: #8c8c8c;
  font-size: 24rpx;
}

.fav-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.fav-tag {
  padding: 6rpx 12rpx;
  background: #fff5eb;
  border-radius: 10rpx;
  color: #d35400;
  font-size: 22rpx;
}

.fav-remove {
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #d07a3a;
  border: 2rpx solid rgba(208, 122, 58, 0.45);
}

.fav-remove:active {
  transform: scale(0.97);
}

