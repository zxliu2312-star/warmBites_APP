page {
  background: #f7f2ed;
  min-height: 100vh;
  color: #2f2f2f;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.hero {
  padding: 48rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #ffe6cc, #fff5e9);
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.06);
}

.brand .title {
  font-size: 40rpx;
  font-weight: 700;
  color: #d35400;
}

.brand .subtitle {
  margin-top: 8rpx;
  color: #8c8c8c;
  font-size: 26rpx;
}

.search-bar {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 999rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.04);
  border: 1px solid #f3e7db;
}

.search-bar .icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.cat-bar {
  padding: 16rpx 0 0;
  background: #f7f2ed;
}

.cat-row {
  display: flex;
  padding: 0 24rpx 8rpx;
  gap: 16rpx;
}

.cat-chip {
  padding: 14rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  background: #ffffff;
  color: #7a7a7a;
  border: 1px solid #f0e6dc;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.cat-chip.active {
  background: #ffcf9f;
  color: #3a2a1b;
  border-color: #ffb872;
  box-shadow: 0 8rpx 20rpx rgba(255, 184, 114, 0.35);
}

.list {
  flex: 1;
  padding: 0 24rpx 32rpx;
}

.recipe-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 16rpx 0 32rpx;
}

.recipe-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  min-height: 380rpx;
}

.cover {
  width: 100%;
  height: 220rpx;
}

.card-body {
  padding: 18rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2f2f2f;
}

.card-meta {
  display: flex;
  justify-content: space-between;
  color: #8b8b8b;
  font-size: 24rpx;
}

.tag-row {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 6rpx 12rpx;
  background: #fff5eb;
  border-radius: 10rpx;
  color: #d35400;
  font-size: 22rpx;
}

.desc {
  color: #6a6a6a;
  font-size: 24rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.empty {
  grid-column: 1 / span 2;
  text-align: center;
  color: #8c8c8c;
  padding: 80rpx 0;
}

.modal {
  position: fixed;
  inset: 0;
  z-index: 999;
}

.mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
}

.modal-panel {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 88vh;
  background: #fffdf9;
  border-top-left-radius: 28rpx;
  border-top-right-radius: 28rpx;
  padding: 24rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  gap: 12rpx;
  position: relative;
  padding-right: 0rpx;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 700;
}

.modal-meta {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 4rpx;
}

.cook-btn {
  border-radius: 999rpx;
  padding: 0 26rpx;
  border: none;
  background: linear-gradient(135deg, #ffb872, #ff8f4c);
  color: #fff;
  font-weight: 700;
  position: absolute;
  right: 0;
  top: 0;
}

.pull-hint {
  width: 0;
  height: 0;
  margin: 0 auto 16rpx;
  border-left: 22rpx solid transparent;
  border-right: 22rpx solid transparent;
  border-top: 16rpx solid #c4c4c4;
}

.modal-scroll {
  flex: 1;
}

.section {
  margin-top: 16rpx;
}

.section-title {
  font-weight: 700;
  font-size: 28rpx;
  margin-bottom: 12rpx;
  color: #3a2a1b;
}

.pill-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.pill {
  padding: 10rpx 16rpx;
  background: #fff0e0;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #74411f;
}

.step-swiper {
  height: 260rpx;
}

.step-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 18rpx;
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.06);
  height: 220rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.step-index {
  font-weight: 700;
  color: #d35400;
}

.step-text {
  color: #444;
  font-size: 26rpx;
  line-height: 1.6;
}

.step-actions {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
}

.ghost {
  background: #f6f1eb;
  color: #6a5039;
  border-radius: 999rpx;
}

.primary {
  background: linear-gradient(135deg, #ffb872, #ff8f4c);
  color: #fff;
  border-radius: 999rpx;
}
