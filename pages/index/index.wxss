page {
  background: #f7f2ed;
  min-height: 100vh;
  color: #2f2f2f;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.hero-container {
  position: relative;
  z-index: 1;
}

.hero {
  position: relative;
  overflow: hidden;
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.06);
  transition: height 0.3s ease;
}

/* 展开/收起箭头 */
.toggle-arrow {
  position: absolute;
  top: 48rpx;
  right: 32rpx;
  z-index: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.toggle-arrow:active {
  transform: scale(0.9);
}

.arrow-icon {
  color: #d0d0d0;
  font-size: 32rpx;
  font-weight: 900;
  line-height: 0.8;
  transform: scaleX(1.5);
  display: inline-block;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.hero-content {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 48rpx 32rpx 40rpx;
  transition: padding 0.3s ease;
}

/* 收起状态下减少内边距 */
.hero.collapsed .hero-content {
  padding: 24rpx 32rpx 0;
  justify-content: center;
}

.brand {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}

.brand .title {
  font-size: 96rpx;
  font-weight: 800;
  color: #000000;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.8);
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
  transition: font-size 0.3s ease;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  opacity: 1;
  transition: opacity 0.3s ease, height 0.3s ease, margin 0.3s ease;
  margin: 8rpx 0;
}

/* 收起状态下隐藏头像 */
.hero.collapsed .avatar {
  opacity: 0;
  height: 0;
  width: 0;
  overflow: hidden;
  margin: 0;
}

.welcome-text {
  font-size: 26rpx;
  color: #8c8c8c;
  font-weight: 400;
  opacity: 1;
  transition: opacity 0.3s ease, height 0.3s ease;
  height: auto;
}

/* 收起状态下隐藏欢迎文字 */
.hero.collapsed .welcome-text {
  opacity: 0;
  height: 0;
  overflow: hidden;
  margin: 0;
}

.collapsed-text {
  font-size: 24rpx;
  color: #8c8c8c;
  font-weight: 400;
  opacity: 0;
  height: 0;
  overflow: hidden;
  margin: 0;
  transition: opacity 0.3s ease, height 0.3s ease, margin 0.3s ease;
}

/* 收起状态下显示提示文字 */
.hero.collapsed .collapsed-text {
  opacity: 1;
  height: auto;
  margin-top: 8rpx;
}

/* 收起状态下缩小标题 */
.hero.collapsed .brand .title {
  font-size: 48rpx;
}

.hero-middle {
  margin-top: 240rpx;
  margin-bottom: 60rpx;
  transition: margin-top 0.3s ease, opacity 0.3s ease, margin-bottom 0.3s ease;
}

/* 收起状态下隐藏中间区域 */
.hero.collapsed .hero-middle {
  margin-top: 0;
  height: 0;
  opacity: 0;
  overflow: hidden;
}

.day-counter {
    font-size: 28rpx;
    color: #000000;
    font-weight: 500;
    letter-spacing: 1rpx;
    opacity: 1;
    transition: opacity 0.3s ease;
    transform: translateY(-8px); 
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1); 
}

/* 收起状态下隐藏天数显示 */
.hero.collapsed .day-counter {
  opacity: 0;
  height: 0;
  overflow: hidden;
}

/* 搜索栏包装器 */
.search-wrapper {
  position: relative;
  z-index: 2;
  padding: 0 32rpx;
  margin-top: -60rpx;
  transition: margin-top 0.3s ease, padding 0.3s ease;
}

/* 展开状态：搜索栏在 hero 底部 */
.search-wrapper.expanded {
  margin-top: -60rpx;
  padding-bottom: 24rpx;
}

/* 收起状态：搜索栏跟随标签栏上移 */
.search-wrapper.collapsed {
  margin-top: 0;
  padding: 16rpx 32rpx 8rpx;
  background: #f7f2ed;
}

.search-bar {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 999rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.8);
  transition: all 0.2s ease;
  backdrop-filter: blur(10rpx);
}

.search-bar .icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-bar:focus-within {
  box-shadow: 0 12rpx 28rpx rgba(255, 184, 114, 0.25);
  border-color: #ffb872;
  transform: translateY(-2rpx);
}

.cat-bar {
  padding: 0;
  background: #f7f2ed;
  transition: padding 0.3s ease;
}

/* 收起状态下，标签栏紧贴搜索栏 */
.search-wrapper.collapsed ~ .cat-bar {
  padding-top: 8rpx;
}

.cat-row {
  display: flex;
  padding: 0 24rpx 8rpx;
  gap: 16rpx;
}

.cat-chip {
  padding: 14rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  background: #ffffff;
  color: #7a7a7a;
  border: 1px solid #f0e6dc;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.cat-chip.active {
  background: #ffcf9f;
  color: #3a2a1b;
  border-color: #ffb872;
  box-shadow: 0 8rpx 20rpx rgba(255, 184, 114, 0.35);
}

.cat-chip:active {
  transform: scale(0.96);
}

.list {
  flex: 1;
  padding: 0;
}

.waterfall {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 16rpx 16rpx 32rpx;
  box-sizing: border-box;
}

.column {
  width: calc(50% - 8rpx);
  display: flex;
  flex-direction: column;
  row-gap: 20rpx;
}

.recipe-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  min-height: 380rpx;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  box-sizing: border-box;
}

.cover {
  width: 100%;
  object-fit: cover;
}

.card-body {
  padding: 18rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2f2f2f;
}

.card-meta {
  display: flex;
  justify-content: space-between;
  color: #8b8b8b;
  font-size: 24rpx;
}

.meta-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 右侧：点赞/收藏（图标在左，数字在右） */
.actions {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.action {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 8rpx;
  border-radius: 999rpx;
}

.action:active {
  transform: scale(0.96);
}

.action-icon {
  width: 30rpx;
  height: 30rpx;
}

.action-count {
  font-size: 22rpx;
  color: #2f2f2f;
  line-height: 1;
}

/* 点赞动画：用额外的 anim class 触发，保证每次点击都能重复播放 */
.action.like.anim {
  animation: like-pop 260ms ease-out;
}

@keyframes like-pop {
  0% {
    transform: scale(0.85);
  }
  55% {
    transform: scale(1.18);
  }
  100% {
    transform: scale(1);
  }
}

.action.collect.active {
  /* 收藏状态样式 */
}

/* 收藏动画：用额外的 anim class 触发，保证每次点击都能重复播放 */
.action.collect.anim {
  animation: fav-pop 260ms ease-out;
}

@keyframes fav-pop {
  0% {
    transform: scale(0.85);
  }
  55% {
    transform: scale(1.18);
  }
  100% {
    transform: scale(1);
  }
}

.tag-row {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 6rpx 12rpx;
  background: #fff5eb;
  border-radius: 10rpx;
  color: #d35400;
  font-size: 22rpx;
}

.desc {
  color: #6a6a6a;
  font-size: 24rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recipe-card:hover {
  transform: translateY(-6rpx);
  box-shadow: 0 16rpx 36rpx rgba(0, 0, 0, 0.08);
}

.recipe-card:active {
  transform: translateY(-2rpx) scale(0.99);
}

.empty {
  grid-column: 1 / span 2;
  text-align: center;
  color: #8c8c8c;
  padding: 80rpx 0;
}

.modal {
  position: fixed;
  inset: 0;
  z-index: 999;
}

.mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
  animation: fade-in 0.2s ease;
}

.modal-panel {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 88vh;
  background: #fffdf9;
  border-top-left-radius: 28rpx;
  border-top-right-radius: 28rpx;
  padding: 24rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  animation: slide-up 0.25s ease;
}

.modal-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 12rpx;
  gap: 10rpx;
}

.modal-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.modal-title {
  flex: 1;
  min-width: 0;
  font-size: 34rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.modal-row-right {
  display: flex;
  align-items: center;
  gap: 14rpx;
  flex: 0 0 auto;
}

.modal-desc {
  color: #6a6a6a;
  font-size: 26rpx;
  line-height: 1.5;
}

.modal-counts {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #2f2f2f;
  font-size: 24rpx;
}

.modal-counts .count.like {
  color: #e74c3c;
}

.modal-counts .count.fav {
  color: #f6c343;
}

.cook-btn {
  border-radius: 999rpx;
  padding: 0 26rpx;
  border: none;
  background: linear-gradient(135deg, #ffb872, #ff8f4c);
  color: #fff;
  font-weight: 700;
  position: static;
  box-shadow: 0 10rpx 20rpx rgba(255, 143, 76, 0.25);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.pull-hint {
  width: 0;
  height: 0;
  margin: 0 auto 16rpx;
  border-left: 22rpx solid transparent;
  border-right: 22rpx solid transparent;
  border-top: 16rpx solid #c4c4c4;
}

.cook-btn:active {
  transform: scale(0.97);
  box-shadow: 0 6rpx 14rpx rgba(255, 143, 76, 0.2);
}

.modal-scroll {
  flex: 1;
}

.section {
  margin-top: 16rpx;
}

.section-title {
  font-weight: 700;
  font-size: 28rpx;
  margin-bottom: 12rpx;
  color: #3a2a1b;
}

.pill-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.pill {
  padding: 10rpx 16rpx;
  background: #fff0e0;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #74411f;
}

.step-swiper {
  height: 260rpx;
}

.step-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 18rpx;
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.06);
  height: 220rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.step-index {
  font-weight: 700;
  color: #d35400;
}

.step-text {
  color: #444;
  font-size: 26rpx;
  line-height: 1.6;
}

.step-actions {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
}

.ghost {
  background: #f6f1eb;
  color: #6a5039;
  border-radius: 999rpx;
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.primary {
  background: linear-gradient(135deg, #ffb872, #ff8f4c);
  color: #fff;
  border-radius: 999rpx;
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.ghost:active,
.primary:active {
  transform: scale(0.97);
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.08);
}

.step-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 14rpx 28rpx rgba(0, 0, 0, 0.08);
}

@keyframes fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slide-up {
  from { transform: translateY(26rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}
